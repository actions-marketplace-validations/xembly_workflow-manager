{
  "name": "agent-zero",
  "version": "1.0.0",
  "description": "Agent Zero: GitHub Action Job Bootstrapper",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepare": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test",
    "prerelease": "npm run prepare",
    "release": "git tag -d v1 && git push origin :refs/tags/v1 && git commit -a --amend && git tag v1 && git push -f && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xembly/agent-zero.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "Xembly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xembly/agent-zero/issues"
  },
  "homepage": "https://github.com/xembly/agent-zero#readme",
  "dependencies": {
    "@actions/core": "^1.3.0",
    "@actions/github": "^5.0.0",
    "del": "^6.0.0",
    "make-dir": "^3.1.0",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.28.6",
    "jest": "^27.0.4",
    "typescript": "^4.3.2"
  }
}
